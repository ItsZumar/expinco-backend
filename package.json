{
  "name": "expinco",
  "version": "1.0.0",
  "description": "Backend application for expinco",
  "main": "app.ts",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "keywords": [
    "expinco",
    "income",
    "expense",
    "tracker",
    "mobile",
    "app",
    "nodejs"
  ],
  "author": "Haseeb Ahmed",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.3",
    "@types/compression": "^1.7.2",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^8.4.6",
    "@types/express": "^4.17.14",
    "@types/express-flash": "^0.0.2",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.1.2",
    "@types/lusca": "^1.7.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.8.4",
    "@types/nodemailer": "^6.4.6",
    "@types/request": "^2.48.8",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "connect-mongo": "^4.6.0",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "lusca": "^1.7.0",
    "mongoose": "^6.6.5",
    "nodemailer": "^6.8.0",
    "winston": "^3.8.2"
  }
}
